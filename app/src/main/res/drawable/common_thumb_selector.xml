<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/sliding_panel_background"/>
            <size android:width="24dp"
                android:height="24dp"/>
            <stroke android:width="2dp"
                android:color="@color/switcher_state_off_disabled"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/sliding_panel_background"/>
            <size android:width="24dp"
                android:height="24dp"/>
            <stroke android:width="2dp"
                android:color="@color/switcher_state_off"/>
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/sliding_panel_background"/>
            <size android:width="24dp"
                android:height="24dp"/>
            <stroke android:width="2dp"
                android:color="@color/switcher_state_off_disabled"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/sliding_panel_background"/>
            <size android:width="24dp"
                android:height="24dp"/>
            <stroke android:width="2dp"
                android:color="@color/primary"/>
        </shape>
    </item>
</selector>