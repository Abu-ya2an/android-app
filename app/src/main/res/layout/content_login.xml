    <data>

        <import type="android.view.View" />
        <import type="net.ivpn.client.v2.login.LoginViewModel.InputState" />

        <variable
            name="viewmodel"
            type="net.ivpn.client.v2.login.LoginViewModel" />

        <variable
            name="signUp"
            type="net.ivpn.client.v2.viewmodel.SignUpViewModel" />

    </data>

